---
const { projects } = Astro.props;
---

{
	projects.map((project) => (
		<a href=`/en/${project.name}`>
			<article class="border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
				<img transition:name={project.name} class="rounded-t-lg" src=`/projects/${project.name}.png` alt="" />
				<div class="p-5">
					<h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{project.title}</h2>
					<p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{project.description}</p>
				</div>
				{project.tags.map(tag => <tag.icon class="size-4 text-white" />)}
			</article>
		</a>
	))
}
